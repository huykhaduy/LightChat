<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgChatReceiver"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="centerCrop"
        android:src="@drawable/testava"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvMsgChatReceiver" />


    <TextView
        android:id="@+id/tvMsgChatReceiver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_receiver_msg"
        android:padding="12dp"
        android:text="Hello Duy ne Phuc"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/imgChatReceiver"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.75" />

    <TextView
        android:id="@+id/tvDateTimeChatReceiver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/tienne"
        android:text="time_send"
        android:textColor="#75A6F1"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tvMsgChatReceiver"
        app:layout_constraintTop_toBottomOf="@+id/tvMsgChatReceiver" />


</androidx.constraintlayout.widget.ConstraintLayout>