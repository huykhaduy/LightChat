<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="5dp"
    android:background="@color/white"
    android:id="@+id/item_friends">

    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding = "5dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageUserFriends"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:src="@drawable/testava" />

        <TextView
            android:id="@+id/tvNameFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/imageUserFriends"
            android:ellipsize="end"
            android:fontFamily="@font/tienne"
            android:maxLines="1"
            android:text="Trang Thanh Phuc"
            android:textColor="#000000"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:background="@color/white"
            app:srcCompat="@drawable/plus" />


    </RelativeLayout>

</LinearLayout>